@page "/products/create"
@rendermode InteractiveServer
@using BlazorWebAppCRUDServer.Data
@using BlazorWebAppCRUDServer.Models
@inject AppDbContext _context
@inject NavigationManager Navigation

<h3>Create Product</h3>

<EditForm Model="product"
          OnValidSubmit="Save"
          FormName="CreateProductForm">

    <DataAnnotationsValidator />
    <ValidationSummary />

    <div class="mb-3">
        <label class="form-label">Name</label>
        <InputText @bind-Value="product.Name" class="form-control" />
    </div>

    <div class="mb-3">
        <label class="form-label">Description</label>
        <InputText @bind-Value="product.Description" class="form-control" />
    </div>

    <div class="mb-3">
        <label class="form-label">Price</label>
        <InputNumber @bind-Value="product.Price" class="form-control" />
    </div>

    <div class="mb-3">
        <label class="form-label">Quantity</label>
        <InputNumber @bind-Value="product.Quantity" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary">Create</button>
    <button type="button" class="btn btn-secondary ms-2" @onclick="Cancel">Cancel</button>
</EditForm>

@code {

    private Product product = new();

    private async Task Save()

    {

        Console.WriteLine("SAVE FIRED");
        _context.Products.Add(product);
        await _context.SaveChangesAsync();
        Navigation.NavigateTo("/products");
    }

    private void Cancel()
    {
        Navigation.NavigateTo("/products");
    }
}